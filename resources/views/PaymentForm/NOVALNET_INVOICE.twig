<script src="{{ plugin_path('Novalnet') }}/js/novalnet_invoice.js"></script>
<form method="post" id="nn_invoice_form" name="nn_invoice_form" action="{{nnPaymentProcessUrl}}">
	<div class="modal-header">
		<button type="button" aria-label="Close" data-dismiss="modal" class="close">
			<span aria-hidden="true">x</span>
		</button> 
		<h4 class="modal-title">{{ trans("Novalnet::PaymentMethod.novalnet_invoice") }}</h4>
	</div>
	<div class="modal-body">
		<fieldset>		
				<input type="hidden" id="paymentKey" name="paymentKey" value="{{paymentMopKey}}" />
				<input type="hidden" name="nn_invoice_valid_dob_msg" id="nn_invoice_valid_dob_msg" value="{{trans("Novalnet::PaymentMethod.doberror")}}">
				<div class="row">
					<div class="col-xs-12">
						<div class="row">
							<div class="col-xs-12 col-sm-12">
								<div data-model="nn_invoice_birthday" class="input-unit">
									<input type="date" name="nn_invoice_birthday" id="nn_invoice_birthday"> <label for="nn_invoice_birthday">{{trans("Novalnet::PaymentMethod.birthdate_label")}}*</label>
								</div>
							</div>
						</div> 
					</div>
				</div> 
			
		</fieldset>
	</div>
	<div class="modal-footer">
		<button type="submit" class="btn btn-primary" id="novalnet_form_btn" onclick="">
			<i class="fa fa-check" aria-hidden="true"> </i>
			{{ trans("Novalnet::PaymentMethod.submit_button_text") }}
		</button>
	</div>
</form>
